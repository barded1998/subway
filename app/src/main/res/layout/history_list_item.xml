<!--        android:id="@+id/history_remove"-->
<!--        android:layout_gravity="center"-->

<!--        android:layout_height="25dp"-->
<!--        android:layout_width="25dp"-->
<!--        android:background="@drawable/close" />-->
</LinearLayout>