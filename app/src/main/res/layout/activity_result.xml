<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:gravity="center"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/result_departure_station_img"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_gravity="center"
               android:background="@drawable/line1"
               android:scaleType="fitXY"
               android:layout_marginRight="7dp"/>
           <TextView
               android:id="@+id/result_departure_station"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="101"
               android:textColor="@color/black"
               android:gravity="center"
               android:textSize="25dp"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginHorizontal="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/right_arrow"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/result_arrival_station_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/line1"
                android:scaleType="fitXY"
                android:layout_marginRight="7dp"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/result_arrival_station"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="102"
                android:gravity="center"
                android:textSize="25dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#888888" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/result_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/result_indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        app:ci_drawable="@drawable/black_radius"
        app:ci_height="7dp"
        app:ci_width="7dp" />

</LinearLayout>